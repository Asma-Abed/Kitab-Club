extends base 

block content 
  main 
    section.max-w-screen-xl.mx-auto.mb-28
      h3.text-center.text-4xl.uppercase.text-colorSecondary.mb-14
        | Create your account
      .h-hl.border-colorPrimary.border-2.rounded.text-center.mx-auto(class='w-1/2')
        form.flex.flex-col.gap-6.mb-14.mt-4
          .flex.flex-col.items-center
            label(for='username') Full Name
            input#username.border-colorSecondary.border-2.rounded.h-10.px-3(class='w-2/3' type='text' placeholder='Enter you name')
          .flex.flex-col.items-center
            label(for='email') Email
            input#email.border-colorSecondary.border-2.rounded.h-10.px-3(class='w-2/3' type='email' placeholder='Enter your email')
          .flex.flex-col.items-center
            label(for='password') Password
            input#passowrd.border-colorSecondary.border-2.rounded.h-10.px-3(class='w-2/3' type='password' placeholder='Choose a passowrd')
          .flex.flex-col.items-center
            label(for='passowrdConfirm') Confirm passowrd
            input#passowrdConfirm.border-colorSecondary.border-2.rounded.h-10.px-2(class='w-2/3' type='password' placeholder='Confirm your password')
        a.px-3.h-10.bg-colorPrimary.rounded.inline-block(class='py-1.5 w-2/3' href='#') Register
