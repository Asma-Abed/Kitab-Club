mixin plan(name,price,nClubs,access)
  .w-72.h-96.border-colorSecondary.border-2.rounded.text-center.relative
    p.text-2xl.mt-4 #{name}
    p.text-5xl.text-colorPrimary.mt-4.mb-8 $#{price}
    ul.text-start.p-6
      li
        svg.w-6.h-6.inline-block.fill-colorPrimary.mr-2
          use(xlink:href='img/sprite.svg#icon-check')
        span #{nClubs} per time
      li
        svg.w-6.h-6.inline-block.fill-colorPrimary.mr-2
          use(xlink:href='img/sprite.svg#icon-x')
        span #{access}
    a.px-3.w-44.bg-colorPrimary.rounded.absolute.top-80(class='py-1.5 right-1/2 translate-x-1/2' href='#') Subscribe